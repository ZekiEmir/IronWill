@model IEnumerable<IronWill.Models.JournalEntry>
@{
    ViewData["Title"] = "Night Watch Archive";
}

<h1 class="text-neon mb-4"><i class="fas fa-archive"></i> SEYİR DEFTERİ ARŞİVİ</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-pen-nib"></i> NÖBET TUT (YENİ KAYIT)</a>
</p>

<div class="list-group">
    @foreach (var entry in Model)
    {
        <div class="list-group-item bg-dark text-white border-secondary mb-2" style="font-family: 'Courier New', monospace;">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <a asp-action="Details" asp-route-id="@entry.Id" class="text-neon text-decoration-none h5 mb-0">> @entry.Date.ToString("yyyy-MM-dd")_LOG.txt</a>
                <div>
                    <small class="text-muted me-3">Ruh Hali: @entry.Mood</small>
                    <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i> DÜZENLE</a>
                </div>
            </div>
            <p class="mb-1 text-muted mt-2">@entry.Title</p>
            <small>Puan: @entry.SelfRating/10</small>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-file-code fa-3x text-muted mb-3"></i>
            <h4 class="text-white">Arşiv Boş</h4>
            <p class="text-muted">Henüz bir seyir kaydı girilmedi Kaptan.</p>
        </div>
    }
</div>
