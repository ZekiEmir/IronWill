@model IronWill.Models.Habit
@{
    ViewData["Title"] = "Yeni Alışkanlık";
}

<h1 class="text-neon">YENİ ALIŞKANLIK</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">İsim</label>
                <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Sigara Yok" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Icon" class="control-label">İcon Sınıfı (FontAwesome)</label>
                <input asp-for="Icon" class="form-control bg-dark text-white border-secondary" placeholder="Örn: fa-smoking" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="BAŞLAT" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="text-muted">Listeye Dön</a>
</div>
