@model IronWill.Models.Habit

@{
    ViewData["Title"] = "Zincir Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark border-secondary shadow-lg">
            <div class="card-header border-secondary text-center">
                <i class="fas fa-edit fa-3x text-warning mb-2"></i>
                <h4 class="text-neon mb-0">HEDEFİ YENİLE</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="LastRelapseDate" />
                    <input type="hidden" asp-for="BestStreakDays" />

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="control-label text-muted mb-2">Hedef Adı</label>
                        <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Sigarayı Bırak" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Icon" class="control-label text-muted mb-2">İkon Sınıfı (FontAwesome)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-icons"></i></span>
                            <input asp-for="Icon" class="form-control bg-dark text-white border-secondary" placeholder="fas fa-smoking-ban" />
                        </div>
                        <small class="text-muted">Örn: 'fas fa-book', 'fas fa-dumbbell', 'fas fa-ban'</small>
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning fw-bold text-uppercase">GÜNCELLE</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">İPTAL</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
