@model IEnumerable<IronWill.Models.Subject>

@{
    ViewData["Title"] = "Akademi (Kanban)";
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
             <h1 class="display-5 fw-bold text-danger"><i class="fas fa-graduation-cap me-3"></i>AKADEMİ</h1>
             <p class="lead text-muted">"Bilgi güçtür."</p>
        </div>
        <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#addSubjectModal">
            <i class="fas fa-plus"></i> Yeni Ders
        </button>
    </div>
</div>

<!-- KANBAN BOARD -->
<div class="row g-4 h-100">
    
    <!-- COL 1: YAPILACAK (TODO) -->
    <div class="col-md-4">
        <div class="card bg-card border border-secondary shadow-lg h-100">
            <div class="card-header border-bottom border-secondary bg-dark bg-opacity-50">
                <span class="text-white fw-bold"><i class="fas fa-list me-2"></i> YAPILACAK</span>
                 <span class="badge bg-secondary float-end" id="count-todo">0</span>
            </div>
            <div class="card-body p-3 kanban-col" id="col-todo">
                @foreach(var subject in Model) {
                    foreach(var task in subject.Topics.Where(t => t.Status == "Todo" || string.IsNullOrEmpty(t.Status))) {
                        <div class="card bg-dark border-start border-4 border-secondary mb-3 kanban-item">
                            <div class="card-body p-3">
                                <small class="text-danger fw-bold text-uppercase">@subject.Name</small>
                                <p class="text-white mb-2">@task.Title</p>
                                <div class="d-flex justify-content-end">
                                    <form asp-action="MoveTopic" method="post">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <input type="hidden" name="status" value="Doing" />
                                        <button class="btn btn-sm btn-outline-light" title="Başla"><i class="fas fa-play"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                <!-- Quick Add Task -->
                 <div class="d-grid mt-3">
                    <button class="btn btn-sm btn-outline-secondary border-dashed" data-bs-toggle="modal" data-bs-target="#addTaskModal">
                        <i class="fas fa-plus"></i> Görev Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- COL 2: SÜRÜYOR (DOING) -->
    <div class="col-md-4">
        <div class="card bg-card border border-warning shadow-lg h-100">
            <div class="card-header border-bottom border-warning bg-warning bg-opacity-10">
                <span class="text-warning fw-bold"><i class="fas fa-spinner fa-spin me-2"></i> SÜRÜYOR</span>
                <span class="badge bg-warning text-dark float-end" id="count-doing">0</span>
            </div>
            <div class="card-body p-3 kanban-col" id="col-doing">
                 @foreach(var subject in Model) {
                    foreach(var task in subject.Topics.Where(t => t.Status == "Doing")) {
                        <div class="card bg-dark border-start border-4 border-warning mb-3 kanban-item">
                            <div class="card-body p-3">
                                <small class="text-danger fw-bold text-uppercase">@subject.Name</small>
                                <p class="text-white mb-2">@task.Title</p>
                                <div class="d-flex justify-content-between">
                                     <form asp-action="MoveTopic" method="post">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <input type="hidden" name="status" value="Todo" />
                                        <button class="btn btn-sm btn-outline-secondary" title="Geri"><i class="fas fa-arrow-left"></i></button>
                                    </form>
                                    <form asp-action="MoveTopic" method="post">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <input type="hidden" name="status" value="Done" />
                                        <button class="btn btn-sm btn-success" title="Bitir"><i class="fas fa-check"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- COL 3: BİTTİ (DONE) -->
    <div class="col-md-4">
        <div class="card bg-card border border-success shadow-lg h-100">
            <div class="card-header border-bottom border-success bg-success bg-opacity-10">
                <span class="text-success fw-bold"><i class="fas fa-check-circle me-2"></i> BİTTİ</span>
                <span class="badge bg-success text-dark float-end" id="count-done">0</span>
            </div>
            <div class="card-body p-3 kanban-col" id="col-done">
                 @foreach(var subject in Model) {
                    foreach(var task in subject.Topics.Where(t => t.Status == "Done")) {
                        <div class="card bg-dark border-start border-4 border-success mb-3 kanban-item opacity-75">
                            <div class="card-body p-3">
                                <small class="text-muted fw-bold text-uppercase">@subject.Name</small>
                                <p class="text-muted text-decoration-line-through mb-2">@task.Title</p>
                                <div class="d-flex justify-content-start">
                                     <form asp-action="MoveTopic" method="post">
                                        <input type="hidden" name="id" value="@task.Id" />
                                        <input type="hidden" name="status" value="Doing" />
                                        <button class="btn btn-sm btn-outline-secondary" title="Geri Al"><i class="fas fa-undo"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

</div>

<!-- MODAL: ADD SUBJECT -->
<div class="modal fade" id="addSubjectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-card border-secondary text-white">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Yeni Ders Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateSubject" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Ders Adı</label>
                        <input name="Name" class="form-control bg-dark text-white border-secondary" required />
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button class="btn btn-danger">Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- MODAL: ADD TASK -->
<div class="modal fade" id="addTaskModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-card border-secondary text-white">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Görev Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddTopic" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                         <label class="form-label">Hangi Ders?</label>
                         <select name="subjectId" class="form-select bg-dark text-white border-secondary">
                             @foreach(var s in Model) {
                                 <option value="@s.Id">@s.Name</option>
                             }
                         </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Görev Tanımı</label>
                        <textarea name="title" class="form-control bg-dark text-white border-secondary" rows="2" required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button class="btn btn-light">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Simple count update script
    document.addEventListener("DOMContentLoaded", function() {
        document.getElementById('count-todo').innerText = document.querySelectorAll('#col-todo .kanban-item').length;
        document.getElementById('count-doing').innerText = document.querySelectorAll('#col-doing .kanban-item').length;
        document.getElementById('count-done').innerText = document.querySelectorAll('#col-done .kanban-item').length;
    });
</script>
