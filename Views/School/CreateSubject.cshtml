@model IronWill.Models.Subject
@{
    ViewData["Title"] = "Yeni Ders";
}

<h1 class="text-neon">YENİ HEDEF</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateSubject">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Ders Adı</label>
                <input asp-for="Name" class="form-control bg-dark text-white" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="TargetHoursPerWeek" class="control-label">Hedef Saat / Hafta</label>
                <input asp-for="TargetHoursPerWeek" class="form-control bg-dark text-white" type="number" />
            </div>
            <button type="submit" class="btn btn-info w-100">DERS EKLE</button>
        </form>
    </div>
</div>
