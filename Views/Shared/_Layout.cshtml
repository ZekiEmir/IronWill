<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SAVAŞ ODASI // IRONWILL</title>
    
    <!-- PWA Settings -->
    <link rel="manifest" href="~/manifest.json">
    <meta name="theme-color" content="#0a0a0a">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="IronWill">
    <link rel="apple-touch-icon" href="~/images/icon-192.png">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    
    <div class="wrapper">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-brand">
                    <i class="fas fa-biohazard me-2"></i> IRONWILL
                </a>
            </div>

            <ul class="sidebar-menu">
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Dashboard")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-shield-alt text-neon"></i>
                        <span>Savaş Odası</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Gym")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Gym" ? "active" : "")">
                        <i class="fas fa-dumbbell text-gold"></i>
                        <span>Kışla (Spor)</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Project")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Project" ? "active" : "")">
                        <i class="fas fa-briefcase text-info"></i>
                        <span>Operasyonlar (İş)</span>
                    </a>
                </li>
                 <li class="sidebar-item">
                    <a href="@Url.Action("Index", "School")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "School" ? "active" : "")">
                        <i class="fas fa-graduation-cap text-danger"></i>
                        <span>Akademi</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Habit")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Habit" ? "active" : "")">
                        <i class="fas fa-link text-success"></i>
                        <span>Zincir</span>
                    </a>
                </li>
                 <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Journal")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Journal" ? "active" : "")">
                        <i class="fas fa-book-dead text-muted"></i>
                        <span>Nöbet Defteri</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="@Url.Action("Index", "Books")" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Books" ? "active" : "")">
                        <i class="fas fa-archive text-warning"></i>
                        <span>Taktik Arşiv</span>
                    </a>
                </li>
            </ul>

            <!-- Active User Profile / Logout could go here -->
            <div class="p-3 border-top border-secondary">
                 <small class="text-muted d-block text-center mb-2">SİSTEM SÜRÜMÜ v3.0</small>
                 <div class="text-center text-neon" style="font-size: 0.8rem;">
                     ONLINE <i class="fas fa-circle ms-1" style="font-size: 8px;"></i>
                 </div>
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            <!-- TOP HEADER -->
            <header class="top-header">
                <div class="header-greeting">
                    <i class="fas fa-user-astronaut text-neon me-2"></i> HOŞGELDİN KOMUTAN
                </div>
                <div class="header-clock" id="digital-clock">
                    --:--
                </div>
            </header>

            <!-- PAGE CONTENT BODY -->
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- GLOBAL SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- PWA Service Worker -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then((reg) => console.log('SW Registered'))
                    .catch((err) => console.log('SW Failed', err));
            });
        }
    </script>
    
    <!-- Clock Script -->
    <script>
        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
            document.getElementById('digital-clock').textContent = timeString;
        }
        setInterval(updateClock, 1000);
        updateClock();
    </script>

    <!-- Morning Modal (Preserved) -->
    <div class="modal fade" id="morningModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-card text-white border border-success shadow-lg">
                <div class="modal-header border-bottom border-success">
                    <h5 class="modal-title text-neon fw-bold"><i class="fas fa-sun"></i> GÜNAYDIN KOMUTAN</h5>
                </div>
                <div class="modal-body p-4">
                    <form id="morningForm">
                        <div class="form-check mb-3 p-3 border border-secondary rounded hover-neon">
                            <input class="form-check-input bg-dark border-secondary" type="checkbox" id="checkBed">
                            <label class="form-check-label text-white fw-bold ms-2" for="checkBed">
                                Yatak Toplandı
                            </label>
                        </div>
                        <div class="form-check mb-4 p-3 border border-secondary rounded hover-neon">
                            <input class="form-check-input bg-dark border-secondary" type="checkbox" id="checkWater">
                            <label class="form-check-label text-white fw-bold ms-2" for="checkWater">
                                Su İçildi
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="dailyGoal" class="form-label text-neon small fw-bold">GÜNÜN HEDEFİ</label>
                            <input type="text" class="form-control bg-dark text-white border-success text-center fw-bold" id="dailyGoal" placeholder="Hedef Gir..." required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-top border-success justify-content-center">
                    <button type="button" class="btn btn-outline-success w-100 fw-bold" onclick="submitMorningRollCall()">
                        RAPOR VER
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Panic Modal (Preserved) -->
    <div class="modal fade" id="panicModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-card text-white border border-danger shadow-lg">
                <div class="modal-header border-danger">
                    <h5 class="modal-title text-danger-glow fw-bold display-6"><i class="fas fa-skull"></i> STOİK PROTOKOL</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-5 text-center">
                    <h2 class="text-white mb-4">"BU DA GEÇER."</h2>
                    <p class="lead text-white-50 mb-5">
                        Zihnindeki fırtına dinince geriye sadece sen kalacaksın.
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <button class="btn btn-outline-light btn-lg" onclick="location.href='/Journal'"><i class="fas fa-pen"></i> Yazarak Sakinleş</button>
                        <button class="btn btn-outline-danger btn-lg" data-bs-dismiss="modal">Hazırım</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yaver Chatbot FAB -->
    <div id="yaver-fab" class="position-fixed bottom-0 end-0 m-4" style="z-index: 1050; cursor: pointer;">
        <div class="bg-success text-dark rounded-circle d-flex align-items-center justify-content-center shadow-lg hover-scale" 
             style="width: 60px; height: 60px; border: 2px solid #00ff00;" onclick="toggleChat()">
            <i class="fas fa-robot fa-lg"></i>
        </div>
    </div>

    <!-- Yaver Window -->
    <div id="yaver-window" class="position-fixed bottom-0 end-0 m-4 mb-5 pb-5 d-none" style="z-index: 1049; width: 350px;">
        <div class="card bg-card border border-success shadow-lg">
            <div class="card-header bg-success text-dark d-flex justify-content-between align-items-center fw-bold">
                <span><i class="fas fa-microchip"></i> YAVER v2.0</span>
                <button type="button" class="btn-close btn-close-white" onclick="toggleChat()"></button>
            </div>
            <div class="card-body p-0">
                <div id="chat-messages" class="p-3 overflow-auto" style="height: 300px; background-color: #0d0d0d;">
                    <div class="mb-2 text-start">
                        <span class="d-inline-block p-2 rounded bg-secondary text-white small">
                            Emredin Komutanım? "motivasyon" veya "kriz" yazabilirsiniz.
                        </span>
                    </div>
                </div>
                <div class="p-2 border-top border-success bg-dark">
                    <div class="input-group">
                        <input type="text" id="chat-input" class="form-control bg-black text-neon border-secondary" placeholder="Komut..." onkeypress="handleEnter(event)">
                        <button class="btn btn-outline-success" onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Yaver & Morning Logic Scripts -->
    <script>
        // Check Morning Status
        $(document).ready(function() {
            $.get('/Dashboard/CheckMorningStatus', function(data) {
                if (!data.isCompleted) {
                    var myModal = new bootstrap.Modal(document.getElementById('morningModal'));
                    myModal.show();
                }
            });
        });

        function submitMorningRollCall() {
            // ... (Same logic as before, just inline for simplicity in full file rewrite)
            var bed = $('#checkBed').is(':checked');
            var water = $('#checkWater').is(':checked');
            var goal = $('#dailyGoal').val();

            if (!bed || !water || !goal) {
                alert("Eksik bilgi!");
                return;
            }

            var payload = { BedMade: bed, WaterDrank: water, DailyMainGoal: goal };

            $.ajax({
                url: '/Dashboard/SubmitMorningLog',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(payload),
                success: function() {
                    bootstrap.Modal.getInstance(document.getElementById('morningModal')).hide();
                    location.reload();
                },
                error: function() { alert("Hata!"); }
            });
        }

        // Yaver Logic
        function toggleChat() { $('#yaver-window').toggleClass('d-none'); }
        function handleEnter(e) { if (e.key === 'Enter') sendMessage(); }

        function sendMessage() {
            var input = $('#chat-input');
            var msg = input.val().trim();
            if(!msg) return;

            addMsg(msg, 'end', 'bg-success text-dark fw-bold');
            input.val('');

            // Client Logic
            var lowerVal = msg.toLowerCase();
            if(lowerVal === 'motivasyon') {
                var quotes = [
                    "Kaderini sev, çünkü senin hayatın bu. - Nietzsche",
                    "Yarın bambaşka bir insan olacağım diyorsun. Neden bugünden başlamıyorsun? - Epiktetos",
                    "Disiplin, ne istediğini unutmamanın sanatıdır."
                ];
                setTimeout(() => botReply(quotes[Math.floor(Math.random() * quotes.length)]), 500);
                return;
            }
            if(lowerVal === 'kriz') {
                botReply("Protokol Başlatılıyor...");
                setTimeout(() => {
                    var modalEl = document.getElementById('panicModal');
                    if(modalEl) new bootstrap.Modal(modalEl).show();
                    else window.location.href = '/Dashboard';
                }, 1000);
                return;
            }

            // Server Logic
            $.post('/Yaver/Chat', { message: msg }, function(data) {
                botReply(data.reply);
            }).fail(() => botReply("Telsiz Kapalı."));
        }

        function addMsg(text, align, classes) {
            $('#chat-messages').append(`
                <div class="mb-2 text-${align}">
                    <span class="d-inline-block p-2 rounded small ${classes}">
                        ${text}
                    </span>
                </div>
            `);
            var box = document.getElementById('chat-messages');
            box.scrollTop = box.scrollHeight;
        }

        function botReply(text) {
            addMsg(text, 'start', 'bg-secondary text-white');
        }
    </script>
</body>
</html>
