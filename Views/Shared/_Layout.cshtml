    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then((reg) => console.log('Service Worker Registered!', reg))
                    .catch((err) => console.log('Service Worker Registration Failed!', err));
            });
        }
    </script>
    
    <script>
        // Sidebar Toggle
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        // Advanced Pomodoro Logic
        let timerInterval;
        let timeLeft = 25 * 60;
        let isRunning = false;
        let initialTime = 25 * 60;

        function updateDisplay() {
            let minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;
            document.getElementById('pomodoro').innerText = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            // Taskbar title update
            document.title = `${minutes}:${seconds.toString().padStart(2, '0')} - ODAK`;
        }

        function setTime(minutes){
            pauseTimer();
            initialTime = minutes * 60;
            timeLeft = initialTime;
            updateDisplay();
        }

        function toggleButtons(running) {
            if(running) {
                $('#btnStart').addClass('d-none');
                $('#btnPause').removeClass('d-none');
            } else {
                $('#btnStart').removeClass('d-none');
                $('#btnPause').addClass('d-none');
            }
        }

        function startTimer() {
            if (isRunning) return;
            
            isRunning = true;
            toggleButtons(true);
            
            timerInterval = setInterval(() => {
                if (timeLeft > 0) {
                    timeLeft--;
                    updateDisplay();
                } else {
                    clearInterval(timerInterval);
                    isRunning = false;
                    toggleButtons(false);
                    new Audio('https://actions.google.com/sounds/v1/alarms/beep_short.ogg').play();
                    alert("GÖREV TAMAMLANDI ASKER! DİNLEN.");
                }
            }, 1000);
        }

        function pauseTimer() {
            clearInterval(timerInterval);
            isRunning = false;
            toggleButtons(false);
        }

        function resetTimer() {
            pauseTimer();
            timeLeft = initialTime;
            updateDisplay();
            document.title = "DEMİR İRADE // KONTROL PANELİ";
        }
    </script>
    <div class="modal fade" id="morningModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
        <!-- ... Morning Modal Content ... (Keeping existing content) -->
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white border-success shadow-lg" style="border-width: 2px;">
                <div class="modal-header border-bottom border-success">
                    <h5 class="modal-title text-neon fw-bold"><i class="fas fa-sun"></i> SABAH İÇTİMASI</h5>
                </div>
                <div class="modal-body p-4">
                    <p class="text-white-50 mb-4 text-center">Güne başlamadan önce rapor ver asker!</p>
                    
                    <form id="morningForm">
                        <div class="form-check mb-3 p-3 border border-secondary rounded bg-black bg-opacity-25">
                            <input class="form-check-input bg-dark border-secondary" type="checkbox" id="checkBed">
                            <label class="form-check-label text-white fw-bold ms-2" for="checkBed">
                                Yatak Toplandı mı?
                            </label>
                        </div>
                        
                        <div class="form-check mb-4 p-3 border border-secondary rounded bg-black bg-opacity-25">
                            <input class="form-check-input bg-dark border-secondary" type="checkbox" id="checkWater">
                            <label class="form-check-label text-white fw-bold ms-2" for="checkWater">
                                1 Bardak Su İçildi mi?
                            </label>
                        </div>

                        <div class="mb-3">
                            <label for="dailyGoal" class="form-label text-neon small fw-bold">GÜNÜN ANA GÖREVİ</label>
                            <input type="text" class="form-control bg-dark text-white border-success text-center fw-bold" id="dailyGoal" placeholder="HEDEF BELİRLE..." required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-top border-success justify-content-center">
                    <button type="button" class="btn btn-outline-success w-100 fw-bold text-uppercase py-2" onclick="submitMorningRollCall()">
                        <i class="fas fa-check-circle"></i> Raporu Tamamla
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Panic Button (Desktop) -->
    <div class="position-fixed top-0 end-0 m-3 d-none d-md-block" style="z-index: 1060;">
        <button class="btn btn-danger fw-bold text-uppercase shadow-lg" data-bs-toggle="modal" data-bs-target="#panicModal">
            <i class="fas fa-exclamation-triangle"></i> ACİL DURUM
        </button>
    </div>

    <!-- Stoic Emergency Modal -->
    <div class="modal fade" id="panicModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-dark text-white border-danger shadow-lg" style="border-width: 3px;">
                <div class="modal-header border-danger">
                    <h5 class="modal-title text-danger fw-bold display-6"><i class="fas fa-skull"></i> STOİK ACİL DURUM PROTOKOLÜ</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-5 text-center">
                    <h2 class="text-white mb-4">"BU DA GEÇER."</h2>
                    <p class="lead text-white-50 mb-5">
                        Şu an hissettiğin acı, öfke veya korku... Hepsi zihninin bir oyunu.
                        Dış dünyadı hiçbir şey ruhuna zarar veremez, sen izin vermedikçe.
                    </p>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <button class="btn btn-outline-light btn-lg" onclick="location.href='/Journal'"><i class="fas fa-pen"></i> Düşüncelerini Yaz</button>
                        <button class="btn btn-outline-danger btn-lg" data-bs-dismiss="modal"><i class="fas fa-fist-raised"></i> Sakinim & Hazırım</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- YAVER Chatbot UI -->
    <div id="yaver-fab" class="position-fixed bottom-0 end-0 m-4" style="z-index: 1050; cursor: pointer;">
        <div class="bg-success text-dark rounded-circle d-flex align-items-center justify-content-center shadow-lg hover-scale" 
             style="width: 60px; height: 60px; border: 2px solid #00ff00;" onclick="toggleChat()">
            <i class="fas fa-robot fa-lg"></i>
        </div>
    </div>

    <div id="yaver-window" class="position-fixed bottom-0 end-0 m-4 mb-5 pb-5 d-none" style="z-index: 1049; width: 350px;">
        <div class="card bg-dark border-success shadow-lg" style="border-width: 2px;">
            <div class="card-header bg-success text-dark d-flex justify-content-between align-items-center fw-bold">
                <span><i class="fas fa-microchip"></i> YAVER v1.0</span>
                <button type="button" class="btn-close btn-close-white" onclick="toggleChat()"></button>
            </div>
            <div class="card-body p-0">
                <div id="chat-messages" class="p-3 overflow-auto" style="height: 300px; background-color: #0d0d0d;">
                    <div class="mb-2 text-start">
                        <span class="d-inline-block p-2 rounded bg-secondary text-white small">
                            Emredin? ("Help" yazarak komutları görebilirsiniz.)
                        </span>
                    </div>
                </div>
                <div class="p-2 border-top border-success bg-dark">
                    <div class="input-group">
                        <input type="text" id="chat-input" class="form-control bg-black text-neon border-secondary" placeholder="Komut girin..." onkeypress="handleEnter(event)">
                        <button class="btn btn-outline-success" onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Check Morning Status on Load
        $(document).ready(function() {
            $.get('/Dashboard/CheckMorningStatus', function(data) {
                if (!data.isCompleted) {
                    var myModal = new bootstrap.Modal(document.getElementById('morningModal'));
                    myModal.show();
                }
            });
        });

        function submitMorningRollCall() {
            var bed = $('#checkBed').is(':checked');
            var water = $('#checkWater').is(':checked');
            var goal = $('#dailyGoal').val();

            if (!bed || !water || !goal) {
                alert("Tüm görevleri tamamlamadan panele erişemezsin asker!");
                return;
            }

            var payload = {
                BedMade: bed,
                WaterDrank: water,
                DailyMainGoal: goal
            };

            $.ajax({
                url: '/Dashboard/SubmitMorningLog',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(payload),
                success: function() {
                    var myModal = bootstrap.Modal.getInstance(document.getElementById('morningModal'));
                    myModal.hide();
                    location.reload(); // Refresh to update Dashboard if needed
                },
                error: function() {
                    alert("Rapor iletilemedi! Bağlantıyı kontrol et.");
                }
            });
        }

        // YAVER Logic
        function toggleChat() {
            $('#yaver-window').toggleClass('d-none');
        }

        function handleEnter(e) {
            if (e.key === 'Enter') sendMessage();
        }

        function sendMessage() {
            var input = $('#chat-input');
            var msg = input.val();
            if(!msg.trim()) return;

            // User Msg
            $('#chat-messages').append(`
                <div class="mb-2 text-end">
                    <span class="d-inline-block p-2 rounded bg-success text-dark fw-bold small">
                        ${msg}
                    </span>
                </div>
            `);
            
            input.val('');
            
            // Auto Scroll
            var chatBox = document.getElementById('chat-messages');
            chatBox.scrollTop = chatBox.scrollHeight;

            // AJAX call
            $.post('/Yaver/Chat', { message: msg }, function(data) {
                $('#chat-messages').append(`
                    <div class="mb-2 text-start">
                        <span class="d-inline-block p-2 rounded bg-secondary text-white small">
                            ${data.reply}
                        </span>
                    </div>
                `);
                chatBox.scrollTop = chatBox.scrollHeight;
            });
        }
    </script>
</body>
