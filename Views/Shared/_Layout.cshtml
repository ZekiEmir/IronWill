            </ul>

            <!-- Pomodoro Widget -->
            <div class="pomodoro-widget d-none d-md-block text-center">
                <h6 class="text-muted text-uppercase mb-2"><i class="fas fa-stopwatch"></i> ODAK MODU</h6>
                <div class="timer-display display-6 text-neon fw-bold mb-2" id="pomodoro">25:00</div>
                
                <div class="d-flex justify-content-center gap-1 mb-2">
                    <button class="btn btn-sm btn-outline-secondary" onclick="setTime(25)">25dk</button>
                    <button class="btn btn-sm btn-outline-secondary" onclick="setTime(50)">50dk</button>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <button class="btn btn-sm btn-success" id="btnStart" onclick="startTimer()"><i class="fas fa-play"></i></button>
                    <button class="btn btn-sm btn-warning d-none" id="btnPause" onclick="pauseTimer()"><i class="fas fa-pause"></i></button>
                    <button class="btn btn-sm btn-danger" onclick="resetTimer()"><i class="fas fa-redo"></i></button>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Mobile Header (Simple) -->
            <div class="d-md-none d-flex justify-content-between align-items-center mb-3 border-bottom border-secondary pb-2">
                <span class="text-neon fw-bold"><i class="fas fa-terminal"></i> KOMUTA YAZILIMI</span>
