@model IronWill.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Savaş Odası";
}

<!-- GRID SYSTEM START -->
<div class="row g-4">
    
    <!-- LEFT COLUMN (MAIN STATS) -->
    <div class="col-lg-8">
        
        <!-- 1. RANK & PROGRESS CARD -->
        <div class="card bg-card border border-secondary shadow-lg mb-4">
            <div class="card-body d-flex align-items-center justify-content-between p-4">
                <div class="d-flex align-items-center">
                    <div class="display-1 me-4 text-neon">
                        @Html.Raw(Model.RankIcon)
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1">MEVCUT RÜTBE</h6>
                        <h2 class="fw-bold mb-0 text-white display-6">@Model.RankTitle</h2>
                        <small class="text-white-50">XP: @Model.CurrentXP / @Model.NextRankXP</small>
                    </div>
                </div>
                <div class="" style="width: 40%;">
                     <h6 class="text-end text-neon mb-1">%@Model.LevelProgress</h6>
                     <div class="progress bg-dark border border-secondary" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.LevelProgress%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. WIDGET ROW -->
        <div class="row g-4 mb-4">
            
            <!-- FOCUS WIDGET (Big Pomodoro) -->
            <div class="col-md-6">
                <div class="card bg-card border border-warning h-100">
                    <div class="card-header border-warning d-flex justify-content-between align-items-center">
                        <span class="text-warning fw-bold"><i class="fas fa-crosshairs me-2"></i> ODAK MODU</span>
                        <span class="badge bg-warning text-dark">ACTIVE</span>
                    </div>
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                         <h1 class="display-3 fw-bold text-white mb-0" id="mainPomodoro">25:00</h1>
                         <p class="text-white-50 mb-3">Tek bir göreve kilitlen.</p>
                         <button class="btn btn-outline-warning w-100 fw-bold" onclick="startTimer()">
                            BAŞLAT
                         </button>
                    </div>
                </div>
            </div>

            <!-- NEXT MISSION WIDGET -->
            <div class="col-md-6">
                <div class="card bg-card border border-danger h-100">
                     <div class="card-header border-danger">
                        <span class="text-danger fw-bold"><i class="fas fa-flag me-2"></i> SIRADAKİ GÖREV</span>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        @if (Model.NextMission != null)
                        {
                            <h4 class="text-white fw-bold mb-3">"@Model.NextMission.Text"</h4>
                            <form asp-action="ToggleTodo" method="post" class="mt-auto">
                                <input type="hidden" name="id" value="@Model.NextMission.Id" />
                                <button type="submit" class="btn btn-danger w-100 fw-bold">
                                    <i class="fas fa-check"></i> TAMAMLANDI (+50 XP)
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-clipboard-check fa-3x mb-3"></i>
                                <p>Tüm görevler tamamlandı komutanım.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. VISUAL INTELLIGENCE (CHARTS) -->
        <div class="row g-4 mb-4">
            <div class="col-md-8">
                <div class="card bg-card border border-primary h-100">
                    <div class="card-header border-primary">
                        <span class="text-primary fw-bold"><i class="fas fa-chart-line me-2"></i> DİSİPLİN TRENDİ (XP)</span>
                    </div>
                    <div class="card-body">
                         <div style="height: 250px;">
                            <canvas id="disciplineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-card border border-purple h-100">
                    <div class="card-header border-purple">
                        <span class="text-white fw-bold"><i class="fas fa-bed me-2"></i> UYKU ANALİZİ</span>
                    </div>
                    <div class="card-body">
                        <div style="height: 250px;">
                            <canvas id="sleepChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 4. HEATMAP & ACTIVITY -->
        <div class="card bg-card border border-secondary mb-4">
            <div class="card-header border-secondary">
                 <span class="text-neon fw-bold"><i class="fas fa-th me-2"></i> GÖRSEL İSTİHBARAT (SABAH İÇTİMASI)</span>
            </div>
            <div class="card-body">
                 <div class="heatmap-grid">
                    @foreach (var day in Model.HeatmapData)
                    {
                        var lvlClass = day.Level == 2 ? "level-2" : (day.Level == 1 ? "level-1" : "level-0");
                        <div class="heatmap-box @lvlClass" 
                             data-title="@day.Date.ToShortDateString() : @day.Count Görev"></div>
                    }
                </div>
                <!-- ... legend ... -->
            </div>
        </div>

    </div>
    
    <!-- RIGHT COLUMN (SIDE STATS) -->
    <div class="col-lg-4">
        <!-- ... existing widgets ... -->
        
        <!-- FINANCE WIDGET (MINI) -->
        <div class="card bg-card border border-success mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-success fw-bold mb-0"><i class="fas fa-lira-sign me-2"></i> FİNANS DURUMU</h6>
                    <span class="badge bg-success text-dark">AYLIK</span>
                </div>
                
                <h3 class="text-white fw-bold mb-1">₺@Model.TotalProjectEarnings.ToString("N0")</h3>
                <small class="text-white-50 mb-3 d-block">Hedef: ₺@Model.TargetEarningsGoal.ToString("N0")</small>

                @{
                    var financePercent = (int)((Model.TotalProjectEarnings / Model.TargetEarningsGoal) * 100);
                    if(financePercent > 100) financePercent = 100;
                }
                
                <div class="progress bg-dark border border-secondary" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: @financePercent%"></div>
                </div>
                <div class="mt-3 small text-muted">
                    <span class="text-white"><i class="fas fa-clock text-warning me-1"></i> ₺@Model.PendingEarnings.ToString("N0")</span> bekleyen ödeme.
                </div>
            </div>
        </div>

        <!-- HABIT WIDGET (MINI) -->
        <div class="card bg-card border border-info mb-4">
            <div class="card-header border-info">
                 <h6 class="text-info fw-bold mb-0"><i class="fas fa-tasks me-2"></i> ZİNCİR KONTROL</h6>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var habit in Model.Habits.Take(3))
                {
                     <div class="list-group-item bg-transparent border-secondary text-white d-flex justify-content-between align-items-center">
                         <span><i class="@habit.Icon me-2 text-muted"></i> @habit.Name</span>
                         <a href="@Url.Action("Index", "Habit")" class="btn btn-sm btn-outline-secondary py-0"><i class="fas fa-check"></i></a>
                     </div>
                }
                <a href="@Url.Action("Index", "Habit")" class="list-group-item bg-transparent text-white-50 text-center small">
                    Tümünü Gör
                </a>
            </div>
        </div>

        <!-- DAILY QUOTE (Small) -->
        <div class="card bg-card border border-secondary">
            <div class="card-body text-center p-4">
                <i class="fas fa-quote-left text-muted fa-2x mb-3"></i>
                <p class="text-white fst-italic">"@Model.DailyQuote"</p>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sync Main Pomodoro with Layout Script if possible, or just duplicate logic for visual
    if (typeof updateDisplay === "function") {
        const originalUpdateDisplay = updateDisplay;
        updateDisplay = function() {
            originalUpdateDisplay();
            let display = document.getElementById('pomodoro').innerText;
            var mainEl = document.getElementById('mainPomodoro');
            if(mainEl) mainEl.innerText = display;
        }
    }

    // CHARTS INITIALIZATION
    document.addEventListener("DOMContentLoaded", function () {
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { grid: { display: false }, ticks: { color: '#666' } },
                y: { grid: { color: '#222' }, ticks: { color: '#666' }, beginAtZero: true }
            },
            plugins: { legend: { display: false } }
        };

        const chartLabels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const disciplineValues = @Html.Raw(Json.Serialize(Model.DisciplineChartValues));
        const sleepValues = @Html.Raw(Json.Serialize(Model.SleepChartValues));

        // Discipline Chart (Line)
        new Chart(document.getElementById('disciplineChart'), {
            type: 'line',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'XP Kazanımı',
                    data: disciplineValues,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: commonOptions
        });

        // Sleep Chart (Bar)
        new Chart(document.getElementById('sleepChart'), {
            type: 'bar',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'Uyku (Saat)',
                    data: sleepValues,
                    backgroundColor: '#6f42c1',
                    borderRadius: 4
                }]
            },
            options: commonOptions
        });
    });
</script>
