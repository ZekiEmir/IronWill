@model IronWill.Models.WorkoutLog
@{
    ViewData["Title"] = "Antrenman Kaydı";
}

<h1 class="text-neon">SET GİR</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Log">
            <div class="form-group mb-3">
                <label asp-for="MuscleGroup" class="control-label">Kas Grubu</label>
                <select asp-for="MuscleGroup" class="form-control bg-dark text-white">
                    <option value="Chest">Göğüs</option>
                    <option value="Back">Sırt</option>
                    <option value="Legs">Bacak</option>
                    <option value="Shoulders">Omuz</option>
                    <option value="Arms">Kol</option>
                    <option value="Abs">Karın</option>
                    <option value="Cardio">Kardiyo</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExerciseName" class="control-label">Egzersiz</label>
                <input asp-for="ExerciseName" class="form-control bg-dark text-white" placeholder="Örn: Bench Press" />
            </div>
            <div class="row">
                <div class="col-6 form-group mb-3">
                    <label asp-for="WeightKg" class="control-label">Ağırlık (kg)</label>
                    <input asp-for="WeightKg" class="form-control bg-dark text-white" type="number" step="0.5" />
                </div>
                <div class="col-6 form-group mb-3">
                    <label asp-for="Reps" class="control-label">Tekrar</label>
                    <input asp-for="Reps" class="form-control bg-dark text-white" type="number" />
                </div>
            </div>
            <button type="submit" class="btn btn-danger w-100">KAYDET</button>
        </form>
    </div>
</div>
