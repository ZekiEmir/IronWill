@model IronWill.Models.ViewModels.GymViewModel

@{
    ViewData["Title"] = "Kışla (Spor)";
    // Layout = "_Layout"; // Already default
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5 fw-bold text-gold"><i class="fas fa-dumbbell me-3"></i>KIŞLA</h1>
        <p class="lead text-muted">"Acı geçicidir, onur sonsuzdur."</p>
    </div>
</div>

<div class="row g-4">
    
    <!-- LEFT COLUMN: LOGGER & CHART -->
    <div class="col-lg-7">
        
        <!-- NEW WORKOUT & VOLUME CHART -->
        <div class="card bg-card border border-warning shadow-lg mb-4">
            <div class="card-header border-bottom border-warning d-flex justify-content-between align-items-center">
                <span class="text-warning fw-bold"><i class="fas fa-edit me-2"></i> ANTRENMAN GÜNLÜĞÜ</span>
                <span class="badge bg-warning text-dark">LOG</span>
            </div>
            <div class="card-body">
                
                <!-- CHART -->
                <div class="mb-4" style="height: 200px;">
                    <canvas id="volumeChart"></canvas>
                </div>

                <hr class="border-secondary my-4">

                <!-- FORM -->
                <form asp-action="Log" method="post" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">HAREKET İSMİ</label>
                        <input asp-for="NewLog.ExerciseName" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Bench Press" required />
                    </div>
                     <div class="col-md-6">
                        <label class="form-label text-muted small">BÖLGE</label>
                        <select asp-for="NewLog.MuscleGroup" class="form-select bg-dark text-white border-secondary">
                            <option value="Chest">Göğüs</option>
                            <option value="Back">Sırt</option>
                            <option value="Legs">Bacak</option>
                            <option value="Shoulders">Omuz</option>
                            <option value="Arms">Kol</option>
                            <option value="Cardio">Kardiyo</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">AĞIRLIK (KG)</label>
                        <input asp-for="NewLog.WeightKg" type="number" step="0.5" class="form-control bg-dark text-white border-secondary fw-bold text-center" placeholder="0" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label text-muted small">TEKRAR</label>
                        <input asp-for="NewLog.Reps" type="number" class="form-control bg-dark text-white border-secondary fw-bold text-center" placeholder="0" required />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-warning w-100 fw-bold">
                            <i class="fas fa-save me-2"></i> KAYDET (+20 XP)
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- HISTORY TABLE -->
        <div class="card bg-card border border-secondary">
            <div class="card-header border-secondary">
                <span class="text-muted fw-bold"><i class="fas fa-history me-2"></i> SON KAYITLAR</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead class="bg-black">
                            <tr class="text-uppercase small text-muted">
                                <th class="ps-4">Tarih</th>
                                <th>Hareket</th>
                                <th>Bölge</th>
                                <th class="text-end pe-4">Set</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.History)
                            {
                                <tr>
                                    <td class="ps-4 text-muted small">@log.Date.ToString("dd.MM HH:mm")</td>
                                    <td class="fw-bold text-white">@log.ExerciseName</td>
                                    <td><span class="badge bg-secondary text-dark">@log.MuscleGroup</span></td>
                                    <td class="text-end pe-4">
                                        <span class="text-warning fw-bold">@log.WeightKg kg</span> 
                                        <span class="text-muted">x</span> 
                                        <span class="text-white">@log.Reps</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <!-- RIGHT COLUMN: NUTRITION (Future Module, kept simple for now) -->
    <div class="col-lg-5">
        <div class="card bg-card border border-success mb-4">
            <div class="card-header border-success">
                <span class="text-success fw-bold"><i class="fas fa-utensils me-2"></i> YEMEKHANE</span>
            </div>
            <div class="card-body text-center py-5">
                <h1 class="display-4 fw-bold text-white mb-0">@Model.TotalProteinToday g</h1>
                <p class="text-success small text-uppercase letter-spacing-2">GÜNLÜK PROTEİN</p>
                
                <hr class="border-secondary w-50 mx-auto my-4">
                
                <form asp-action="AddFoodLog" method="post" class="d-flex gap-2">
                    <input type="text" name="foodName" class="form-control bg-dark text-white border-secondary" placeholder="Yemek..." required>
                    <input type="number" name="protein" class="form-control bg-dark text-white border-secondary" placeholder="Prot." style="width: 80px;" required>
                    <button class="btn btn-outline-success"><i class="fas fa-plus"></i></button>
                </form>
                
                <div class="mt-4 text-start">
                    <small class="text-muted d-block mb-2">BUGÜN YENENLER:</small>
                    <ul class="list-unstyled">
                        @foreach(var food in Model.TodayFoodLogs)
                        {
                            <li class="d-flex justify-content-between text-white-50 border-bottom border-secondary py-1">
                                <span>@food.FoodName</span>
                                <span class="text-success">@food.ProteinAmount g</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('volumeChart').getContext('2d');
        
        // Data from Model (Serialized)
        const labels = @Html.Raw(Json.Serialize(Model.ChartLabels));
        const data = @Html.Raw(Json.Serialize(Model.ChartValues));

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Toplam Hacim (kg * tekrar)',
                    data: data,
                    borderColor: '#ffd700', // Gold
                    backgroundColor: 'rgba(255, 215, 0, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#000',
                    pointBorderColor: '#ffd700'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { 
                        mode: 'index', 
                        intersect: false,
                        backgroundColor: '#000',
                        titleColor: '#ffd700',
                        bodyColor: '#fff',
                        borderColor: '#333',
                        borderWidth: 1
                    }
                },
                scales: {
                    x: { 
                        grid: { display: false, drawBorder: false },
                        ticks: { color: '#666' }
                    },
                    y: { 
                        grid: { color: '#222', drawBorder: false },
                        ticks: { color: '#666' },
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
